<div class="main-content">
    <h2 class="content-heading">Add Games</h2>

    <div class="search-container">
      <form {{action "search" on="submit"}} method="post">
        <button class="fa fa-search search-button"></button>
        {{input class="fa search-bar" value=searchBar placeholder="Search games"}}
      </form>

      {{#if searching}}
        <p class="searching-text">Searching... This may take a minute.</p> <img src="assets/images/ajax-loader.gif"/>
      {{else}}

      {{/if}}
    </div>

      <ul class="results">

        {{#each game in searchResults itemController="game"}}
        <li class="result">

          <img class="result-image" {{bind-attr src=game.model.thumbnail.[0]}}>

          <div class="result-text">
            <h3 class="result-title">{{game.model.name.[0].value}}</h3>
            <p class="result-description">{{{game.model.description.[0]}}}</p>
          </div>

          {{#if game.isAdded}}
            <p class="added">added</p>
          {{else}}
            <button class="add-game-button" {{action "addGame" on="click"}}>add game</button>
          {{/if}}

          </li>
        {{/each}}

      </ul>

  </div>


{{outlet}}
